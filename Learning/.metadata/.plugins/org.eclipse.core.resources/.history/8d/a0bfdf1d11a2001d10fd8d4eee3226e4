package com.learning.corejava.Jan_2023;

public class FirstStringProgram { 
	  public static void main(String args[]) {
	  System.out.println("First String program");
	 
	  // 1. way to create a string - literal way
	  String s1="Hello All";
	  System.out.println(s1);
	 
	  //2. way to create a string  - new operator
	  String s2=new String("Hello Java");
	  System.out.println(s2);
	 
	  System.out.println("Length of S1 :" + s1.length());
	  System.out.println("Length of S2 :" + s2.length());
	  System.out.println("S1 toUpper:" +s1.toUpperCase());
	  System.out.println("S1 toLower:" +s1.toLowerCase());
	 
	  // Each string is internally an array.
	  System.out.println(s1.charAt(0));
	  System.out.println(s1.charAt(6));

	    // Traval the string
	  
	        for(int i=0;i<s1.length();i++) {
	            System.out.println(s1.charAt(i));
	        }
	        // for with string require conversion to char array.
	        for(char i:s1.toCharArray()) {
	            System.out.println(i);
	        }                
	}
}